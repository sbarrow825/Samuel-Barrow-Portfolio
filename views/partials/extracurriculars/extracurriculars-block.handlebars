<div class="row">
    <div class="col s12 m6">
        <div class="card blue darken-1">
            <div class="card-content white-text">
                <span class="card-title"><h1>{{{dataValues.title}}}</h1></span>
                <p>{{{dataValues.description}}}</p>
            </div>
            <div class="card-action">
                <h4>Responsibilites for this extracurricular activity:</h4>
                <br>
                {{#each Responsibilities}}
                {{> responsibilities/responsibilities-mini-block}}
                {{/each}}
                <h4>Associated skills:</h4>
                {{#each Skills}}
                {{> skills/skills-mini-block}}
                {{/each}}
            </div>
        </div>
    </div>
</div>