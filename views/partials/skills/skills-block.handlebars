<div class="row">
    <div class="col s12 m6">
        <div class="card blue darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{{dataValues.name}}}</span>
                <p>{{{dataValues.description}}}</p>
            </div>
            <div class="card-action">
                <h4>Associated extracurriculars:</h4>
                {{#each Extracurriculars}}
                {{> extracurriculars/extracurriculars-mini-block}}
                {{/each}}
                <h4>Associated projects:</h4>
                {{#each Projects}}
                {{> projects/projects-mini-block}}
                {{/each}}
                <h4>Associated employments:</h4>
                {{#each Employments}}
                {{> employments/employments-mini-block}}
                {{/each}}
            </div>
        </div>
    </div>
</div>